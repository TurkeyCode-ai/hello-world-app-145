# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3000/api

# CORS Configuration
FRONTEND_URL=http://localhost:3001
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# Security
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# Database
# DATABASE_URL=your_database_url_here
# DATABASE_URL=postgresql://user:password@localhost:5432/helloworld
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=app.log

# Accessibility Features
WCAG_COMPLIANCE_LEVEL=AA
ENABLE_ACCESSIBILITY_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Configuration
COMPRESSION_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=3001

# External Services (if needed in future)
# EXTERNAL_API_URL=https://api.example.com
# EXTERNAL_API_KEY=your-api-key-here

# Development Configuration
NODEMON_IGNORE=node_modules,dist,logs
NODEMON_EXT=js,json,html,css

# Production Configuration
PM2_INSTANCES=max
PM2_EXEC_MODE=cluster
PM2_MAX_MEMORY_RESTART=500M

# Add other environment variables as needed
